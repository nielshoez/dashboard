<script>
    var addColsword = function (num){
        <% for(var i = 0; i < data.word.length; i++) { %>
            var myCol = $('<div class="col-lg-12 col-xl-3" style=""></div>');
            var myDeleteBtn = $('<form class="form-signin" action="/widgets" method="POST"> <input type="hidden" id="wordClose" name="wordClose" value="<%=data.word[i].word%>">  <button type="submit" class="close" aria-label="Close"> <span aria-hidden="true">&times;</span> </button> </form>')

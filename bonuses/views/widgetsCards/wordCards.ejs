            var myEditButton = $('<form class="form-signin" action="/widgets" method="POST"> <label for="Editword">Word</label> <input type="adress" class="form-control" id="Editword" name="Editword" placeholder="Word"> <input type="hidden" id="currentWord" name="currentWord" value="<%=data.word[i].word%>">  <button type="submit" class="btn btn-primary">Submit</button> </form>');
            myDeleteBtn.appendTo(myBlock);
